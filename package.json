{
  "name": "ng2-adsense",
  "version": "5.3.0",
  "license": "MIT",
  "repository": "https://github.com/scttcper/ng2-adsense.git",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ts-node build.ts",
    "ghpages": "ng build --prod --no-progress --baseHref='/ng2-adsense/'",
    "publish": "cd dist && npm publish",
    "bundlesize": "npx bundlesize",
    "test": "ng test --browsers=ChromeCI",
    "test:ci": "ng test --single-run --code-coverage --no-progress --browsers=ChromeCI",
    "lint": "ng lint --type-check ---format stylish",
    "lint:fix": "ng lint --type-check --fix ---format stylish",
    "e2e": "ng e2e",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "travis-deploy-once": "travis-deploy-once",
    "commit": "git-cz",
    "semantic-release": "cd dist && semantic-release"
  },
  "dependencies": {
    "@angular/animations": "5.2.10",
    "@angular/common": "5.2.10",
    "@angular/compiler": "5.2.10",
    "@angular/core": "5.2.10",
    "@angular/forms": "5.2.10",
    "@angular/http": "5.2.10",
    "@angular/platform-browser": "5.2.10",
    "@angular/platform-browser-dynamic": "5.2.10",
    "@angular/router": "5.2.10",
    "@ctrl/ngx-github-buttons": "1.0.9",
    "bootstrap": "4.1.1",
    "core-js": "2.5.5",
    "rxjs": "5.5.10",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "6.0.0",
    "@angular/compiler-cli": "5.2.10",
    "@angular/language-service": "5.2.10",
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "@types/fs-extra": "5.0.2",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "9.6.11",
    "codelyzer": "4.3.0",
    "fs-extra": "6.0.0",
    "jasmine-core": "2.99.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.4.2",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "ng-packagr": "3.0.0-rc.2",
    "ts-node": "6.0.2",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
  "release": {
    "branch": "master"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/bundles/ng2-adsense.umd.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./dist/esm2015/ng2-adsense.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./dist/esm5/ng2-adsense.js",
      "maxSize": "2 kB"
    }
  ]
}
